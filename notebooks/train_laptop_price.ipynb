{"cells":[{"cell_type":"markdown","metadata":{},"source":["# Laptop Price Regression\n","\n","This notebook collects product data from Fake Store API, engineers features, trains a regression model, and exports the artifact to JSON for the web app."]},{"cell_type":"code","execution_count":null,"metadata":{},"outputs":[],"source":["import json, re, math\n","import requests\n","import pandas as pd\n","from sklearn.pipeline import Pipeline\n","from sklearn.preprocessing import StandardScaler\n","from sklearn.linear_model import LinearRegression\n","\n","# Use Fake Store API as the public data source\n","URL = 'https://fakestoreapi.com/products'\n","r = requests.get(URL)\n","r.raise_for_status()\n","j = r.json()\n","data = j if isinstance(j, list) else j.get('products', [])\n","len(data)"]},{"cell_type":"code","execution_count":null,"metadata":{},"outputs":[],"source":["def parse_specs(text):\n","    s = (text or '').lower()\n","    ram = None\n","    m = re.search(r'(\\d{2,3})\\s*gb', s)\n","    if m: ram = int(m.group(1))\n","    storage = None\n","    m = re.search(r'(\\d{2,4})\\s*(tb|gb)', s)\n","    if m: storage = int(m.group(1)) * (1024 if m.group(2)=='tb' else 1)\n","    cpu = None\n","    m = re.search(r'(i[3579]|ryzen\\s*[3579])', s)\n","    if m: cpu = m.group(1)\n","    return ram, storage, cpu\n","\n","def brand_score(brand):\n","    if not brand: return 0.0\n","    b = brand.lower()\n","    return {\n","        'apple': 1.0, 'msi': 0.35, 'dell': 0.25, 'samsung': 0.25, 'lenovo': 0.2, 'asus': 0.15, 'hp': 0.15, 'acer': 0.05\n","    }.get(b, 0.0)\n","\n","def cpu_level(cpu):\n","    if not cpu: return 0.0\n","    s = cpu.lower()\n","    if 'i9' in s: return 4.0\n","    if 'i7' in s: return 3.0\n","    if 'i5' in s: return 2.0\n","    if 'i3' in s: return 1.0\n","    if 'ryzen 9' in s: return 3.8\n","    if 'ryzen 7' in s: return 3.1\n","    if 'ryzen 5' in s: return 2.2\n","    if 'ryzen 3' in s: return 1.2\n","    return 0.0\n","\n","rows = []\n","for p in data:\n","    # Fake Store products don't have brand; use category as proxy\n","    brand = p.get('category')\n","    specs_text = f"{p.get('title','')} {p.get('description','')}"\n","    ram, storage, cpu = parse_specs(specs_text)\n","    rows.append({\n","        'brand': brand,\n","        'rating': (p.get('rating') or {}).get('rate', 4.0) if isinstance(p.get('rating'), dict) else p.get('rating', 4.0),\n","        'price': p.get('price'),\n","        'ram_gb': ram or 0,\n","        'storage_gb': storage or 0,\n","        'cpu_level': cpu_level(cpu),\n","        'brand_score': brand_score(brand),\n","    })\n","\n","df = pd.DataFrame(rows)\n","df.head()"]},{"cell_type":"code","execution_count":null,"metadata":{},"outputs":[],"source":["features = ['ram_gb','storage_gb','cpu_level','brand_score','rating']\n","X = df[features].fillna(0.0)\n","y = df['price']\n","pipe = Pipeline([('scaler', StandardScaler()), ('lr', LinearRegression())])\n","pipe.fit(X, y)\n","y_pred = pipe.predict(X)\n","y.min(), y.max(), y.mean(), y.std()"]},{"cell_type":"code","execution_count":null,"metadata":{},"outputs":[],"source":["scaler = pipe.named_steps['scaler']\n","lr = pipe.named_steps['lr']\n","artifact = {\n","    'feature_order': features,\n","    'scaler': { 'means': scaler.mean_.tolist(), 'stds': scaler.scale_.tolist() },\n","    'coefficients': lr.coef_.tolist(),\n","    'intercept': float(lr.intercept_),\n","    'y_stats': { 'mean': float(y.mean()), 'std': float(y.std()), 'min': float(y.min()), 'max': float(y.max())}\n","}\n","print(artifact)\n","with open('../server/models/laptop_price_regression.json','w') as f:\n","    json.dump(artifact, f, indent=2)\n","print('Saved to ../server/models/laptop_price_regression.json')"]}],"metadata":{"kernelspec":{"display_name":"Python 3","language":"python","name":"python3"},"language_info":{"name":"python","version":"3.11"}},"nbformat":4,"nbformat_minor":5}
